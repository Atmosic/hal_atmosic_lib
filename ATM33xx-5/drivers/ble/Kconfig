config EXT_WAKEUP_ENABLE
	int "EXT WAKEUP ENABLE"
	default 1

config ATM_BLE_DRIVER_SLEEP
	bool "Atmosic BLE driver sleep"
	default y

config ATM_SLEEP_ENABLE
	int "Sleep enable value"
	default 2 if ATM_BLE_DRIVER_SLEEP
	default 0

config ATM_SLEEP_ADJ
	int "Sleep adjustment value"
	default 10

config USE_ATMWSTK
	bool "Use fixed BLE stack image"
	default n

config ATMWSTK
	string "Fixed BLE stack image flavor"
	default "LL"
	depends on USE_ATMWSTK

config ATMWSTKLIB
	string "BLE link layer library flavor"
	default "PD50"
	depends on !USE_ATMWSTK
