+int generate_yaml(std::string const &ymlFilePath)
+{
+    YAML::Node root;
+    YAML::Node data = root["data"];
+    int data_num = 1;
+
+    std::reverse(settings.begin(), settings.end());
+    std::cout << "********* Save YAML data start *********" << std::endl;
+    for (auto const &setting : settings)
+    {
+        size_t pos = setting.find(':');
+        if (pos != std::string::npos)
+        {
+            YAML::Node data_node;
+            std::string key = setting.substr(0, pos);
+            std::string value = setting.substr(pos + 1);
+            key = key.c_str();
+            value = value.c_str();
+            data_node["tag_name"] = key;
+            data_node["tag_value"] = "0x" + AtmUtil::toUpperCaseHexString(value);
+            std::string name = "data_" + std::to_string(data_num);
+            data[name] = data_node;
+            std::cout << "Tag Name: " << data_node["tag_name"] << ", Tag Value: "
+                  << data_node["tag_value"] << std::endl;
+            data_num += 1;
+        }
+    }
+    std::cout << "********* Save YAML data end *********" << std::endl;
+    std::ofstream fout(ymlFilePath);
+    fout << root;
+    return 0;
+}
+
+int parser_yaml(std::string const &ymlFilePath)
+{
+    YAML::Node config = YAML::LoadFile(ymlFilePath);
+    int data_num = 0;
+
+    if (config["data"])
+    {
+        YAML::Node const &data = config["data"];
+        std::cout << "********* Load YAML data start *********" << std::endl;
+        for (auto it = data.begin(); it != data.end(); ++it)
+        {
+            YAML::Node const &entry = it->second;
+            if (entry["tag_name"] && entry["tag_value"]) {
+                std::string tagName = entry["tag_name"].as<std::string>();
+                std::string tagValue = entry["tag_value"].as<std::string>();
+                std::cout << "Tag Name: " << tagName << ", Tag Value: "
+                  << tagValue << std::endl;
+                settings.push_back(tagName + ":" + tagValue);
+                data_num += 1;
+            }
+        }
+        std::cout << "********* Load YAML data end *********" << std::endl;
+    }
+    else
+    {
+        std::cout << "No 'data' section found in the YAML file." << std::endl;
+    }
+    return data_num;
+}
